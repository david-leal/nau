<?xml version="1.0" ?>
<project name="Simple" >
	<assets> 
		<scenes>
			<scene name="ball">
				<geometry name="ball" type="SPHERE" material="ballMat"
					SLICES=20 STACKS=20/>
					<TRANSLATE x =0 y=4 z =0 />
					<!--SCALE x=0.5 y=0.5 z=0.5 /-->
			</scene>
			<scene name="plane">
				<geometry name="plane" type="SQUARE" material="azulejo"/>
				<SCALE x=5 y=5 z=5 />
			</scene>
			<!--scene name="plane">
				<geometry name="plane" type="BOX" material="azulejo"/>
				<!--TRANSLATE x =0 y=-1 z =0 /-->
			<!--/scene-->
			<scene name="Axis">
				<geometry name = "axis" type = "AXIS"  >
					<SCALE x=5 y=5 z =5 />
				</geometry>
			</scene>
		</scenes>
		<viewports>
			<viewport name="MainViewport">
				<CLEAR_COLOR r="1.0" g="1.0" b="1.0" />
			</viewport>
		</viewports>
		
		<cameras>
			<camera name="MainCamera" >
				<viewport name="MainViewport" />
				<projection TYPE="PERSPECTIVE" FOV=60.0 NEAR=1 FAR=1000.0 />
				<!--
				<TYPE value="PERSPECTIVE"/>
				<FOV value=60/>
				<NEAR value= 1/>
				<FAR value= 100/>
				-->
				<POSITION x=0.0 y=1.0 z=-5.0 />
				<!--<VIEW x=0.0 y=0.0 z=0.1 />-->
				<LOOK_AT_POINT x=0 y=0 z=0/>
				<!--
				<ZX_ANGLE value = 0.877/>
				<ELEVATION_ANGLE value=-0.27548/>
				-->
				<UP x=0.0 y=1.0 z=0.0 />
			</camera>
		</cameras>
		
		<lights>
			<light name="Sun">
				<DIRECTION x=-2 y=-1 z=2 />
				<COLOR r="0.9" g="0.9" b="0.9" />
				<AMBIENT r="0.5" g="0.0" b="0.0" />
			</light>
		</lights>
		
		<materialLibs>
			<materialLib filename = "bullet.mlib"/>
		</materialLibs> 
		
	</assets>
	
	<pipelines>
		<pipeline name="fixedfunction" default="true">
			<pass class="default" name="pass1">
				<scenes>
					<scene name="ball" />
					<scene name="plane" />
					<scene name="Axis" />
				</scenes>
				<camera name="MainCamera" />
				<lights>
					<light name="Sun" />
				</lights>
				<materialMaps>
					<map fromMaterial="azulejo" toLibrary="Simple" toMaterial="simpleTextured" />
					<map fromMaterial="ballMat" toLibrary="Simple" toMaterial="simpleColored" />
				</materialMaps>
			</pass>
		</pipeline>
	</pipelines>
</project>